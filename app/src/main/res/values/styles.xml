<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button -->
    <style name="ColoredButtonAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ColoredButtonBase" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!-- Text -->
    <style name="TitleTheme" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TitleAppearance</item>
    </style>

    <style name="TitleThemeBase" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TitleAppearanceBase</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="TitleAppearanceBase" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="TitleBoldTheme" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TitleBoldAppearance</item>
    </style>

    <style name="TitleBoldAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuOptionsText" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingBottom">@dimen/little_space</item>
        <item name="android:paddingTop">@dimen/little_space</item>
        <item name="android:paddingLeft">@dimen/options_hor_padding</item>
        <item name="android:paddingRight">@dimen/options_hor_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/textShadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:background">@drawable/theme_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
