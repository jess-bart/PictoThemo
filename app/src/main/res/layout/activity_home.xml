<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.jessy_barthelemy.pictothemo.Activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_pictures">
        <include layout="@layout/picture_layout"/>
    </LinearLayout>

    <TextView
        style="@style/TitleTheme"
        android:id="@+id/home_theme_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_pictures"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_theme_title">
        <android.support.v7.widget.AppCompatButton
            android:theme="@style/ColoredButtonAccent"
            android:id="@+id/home_theme_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_min_width"
            android:enabled="false"/>
        <android.support.v7.widget.AppCompatButton
            android:theme="@style/ColoredButtonBase"
            android:id="@+id/home_theme_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_min_width"
            android:enabled="false"/>
    </LinearLayout>
</RelativeLayout>
