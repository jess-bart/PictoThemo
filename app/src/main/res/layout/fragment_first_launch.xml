<LinearLayout
    android:id="@+id/pictures_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/first_lauch_icon"
        android:layout_width="150dp"
        android:layout_height="114dp"
        android:src="@drawable/first_launch_picture"
        android:contentDescription="@string/content_launch_icon"/>
    <TextView
        android:id="@+id/first_launch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:id="@+id/first_launch_separator"
        android:orientation="horizontal"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:scaleX="0"/>

    <TextView
        android:id="@+id/first_launch_description"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/first_launch_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_launch_validation"
        android:textColor="@drawable/border_button_text_color"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textAlignment="center"
        android:background="@drawable/border_button"
        android:includeFontPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:visibility="gone"/>
</LinearLayout>